<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--*** basic TextView style ***-->
    <style name="TEXT_COMMON_BLACK" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_H3" parent="TEXT_COMMON_BLACK">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TEXT_H3B" parent="TEXT_COMMON_BLACK">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TEXT_H4" parent="TEXT_COMMON_BLACK">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TEXT_H4B" parent="TEXT_COMMON_BLACK">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TEXT_B1" parent="TEXT_COMMON_BLACK">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

</resources>
