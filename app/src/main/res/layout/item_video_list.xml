<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.hinuri.entity.VideoItem" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="76dp"
        android:layout_height="76dp"
        tools:src="@color/grey_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        imagePath="@{item.snippet.thumbnails.medium.url}"/>

    <TextView
        style="@style/TEXT_H4B"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/padding_medium"
        android:text="@{item.snippet.title}"
        tools:text="TITLE"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>